@page
@model University.Pages.Change.ChangeRecordModel
@{
}


<h1>Change</h1>
<hr />
<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Create Record</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <button name="action" value="Choose record" type="submit" class="btn btn-primary">Choose record</button>
                    </div>
                    <div class="mb-3">
                         <input type="hidden" asp-for=record.StudentId/>
                        <label class="form-label">Choose student</label>
                        <input asp-for=record.Student.Name type="text" disabled> <button name="action" value="Choose student" type="submit" class="btn btn-primary">Choose</button> <!--model.Name-->
                    </div>
                    <div class="mb-3">
                         <input type="hidden" asp-for=record.CourseId/>
                        <label class="form-label">Choose course</label>
                        <input asp-for=record.Course.Name type="text" disabled> <button name="action" value="Choose course" type="submit" class="btn btn-primary">Choose</button>
                    </div>
                    <div class="mb-3">
                        <input type="hidden" asp-for=record.SpecializationId/>
                        <label class="form-label">Choose Specialization</label>
                        <input asp-for=record.Specialization.Name  type="text" disabled> <button name="action" value="Choose specialization" type="submit" class="btn btn-primary">Choose</button>  
                    </div>
                    <div class="mb-3">
                        <button name="action" value="Save record" type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>